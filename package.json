{
  "name": "node-btcpay",
  "version": "0.2.4",
  "description": "A nodejs client implementation for BTCPay",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p ./tsconfig.json",
    "coverage": "npm run unit -- --coverage",
    "format": "npm run prettier -- --write",
    "format:ci": "npm run prettier -- --check",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "prepare": "npm run build",
    "prettier": "prettier 'src/**/*.ts' 'tests/**/*.spec.ts' --single-quote --trailing-comma all",
    "test": "npm run format:ci && npm run lint && npm run coverage",
    "unit": "jest --config=jest.json --runInBand"
  },
  "author": "Tim Akinbo <tim@tanjalo.com>; Christoph Ott <christoph.ott@lean-coders.at>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/btcpayserver/node-btcpay.git"
  },
  "dependencies": {
    "bs58": "^4.0.1",
    "btcpay": "^0.2.4",
    "elliptic": "^6.5.2",
    "request": "^2.85.0",
    "request-promise": "^4.2.5",
    "strip-ansi": "^5.2.0",
    "underscore": "^1.9.2"
  },
  "devDependencies": {
    "@types/bs58": "^4.0.1",
    "@types/elliptic": "^6.4.12",
    "@types/jest": "^24.9.1",
    "@types/node": "^11.15.5",
    "@types/puppeteer": "^1.20.3",
    "@types/request": "^2.48.4",
    "@types/request-promise": "^4.1.45",
    "@types/underscore": "^1.9.4",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "puppeteer": "^1.20.0",
    "rimraf": "^2.7.1",
    "ts-jest": "^24.3.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  }
}
